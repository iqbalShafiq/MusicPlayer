<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/blue_variant_accent</item>
        <item name="colorOnPrimary">@color/dark_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_primary</item>
        <item name="colorSecondaryVariant">@color/light_primary</item>
        <item name="colorOnSecondary">@color/dark_accent</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/blue_accent</item>
        <item name="android:statusBarColor">@color/blue_accent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?colorSecondary</item>
    </style>

    <style name="BottomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text -->
